<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/post_dialog_select_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_add_a_photo_black_24dp" />

    <EditText
        android:id="@+id/title_edittext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_dialog_select_imageview"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:layout_toEndOf="@+id/post_dialog_send_imageview"
        android:layout_toRightOf="@+id/post_dialog_send_imageview"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:hint="Title"
        android:inputType="textMultiLine"
        android:lines="4"
        android:maxLines="4"
        android:minLines="1"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <EditText
        android:id="@+id/desc_edittext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title_edittext"
        android:layout_alignStart="@+id/title_edittext"
        android:layout_below="@+id/title_edittext"
        android:layout_marginTop="37dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:lines="20"
        android:maxLines="20"
        android:minLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.148" />

    <ImageView
        android:id="@+id/post_dialog_send_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_send_black_24dp" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/title_edittext"
        android:layout_alignRight="@+id/title_edittext"
        android:layout_below="@+id/post_dialog_select_imageview"
        android:text="POST" />


</RelativeLayout>